<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sunny.DAO.CommandInterface">

  <resultMap type="com.sunny.bean.Command" id="CommandResult">
  <!-- id标签对应的是数据库中的主键 -->
    <id column="C_ID" jdbcType="INTEGER" property="id"/>
    <result column="NAME" jdbcType="VARCHAR" property="name"/>
    <result column="DESCRIPTION" jdbcType="VARCHAR" property="description"/>
    <!-- 使用collection来表示返回的map结果中包含一个子表的集合，和实体类中的contentList相对应 -->
    <collection property="contentList" ofType="com.sunny.bean.CommandContent" 
    resultMap="com.sunny.DAO.CommandContentInterface.CommandContentResult"/>
  </resultMap>

	<select id="queryCommandList" parameterType="com.sunny.bean.Command"
		resultMap="CommandResult">
		select a.ID C_ID,a.NAME,a.DESCRIPTION,b.ID,b.CONTENT,b.COMMAND_ID
		from COMMAND a left join COMMAND_CONTENT b
		on a.ID=b.COMMAND_ID
		<where>
			<if test="name!=null&amp;&amp;!&quot;&quot;.equals(name.trim())">
				and a.NAME=#{name}
			</if>
			<if test="id!=null and !&quot;&quot;.equals(id.trim())">
			and a.ID=#{id}</if>
			<if
				test="description!=null&amp;&amp;!&quot;&quot;.equals(description.trim())">
				and a.DESCRIPTION like '%' #{description} '%'</if>
		</where>
	</select>
	
	<select id="countCommandNum" resultType="int">
		select count(*) from command
	</select>
	
	<select id="getCommandByName" parameterType="java.lang.String" 
	resultType="com.sunny.bean.Command">
	SELECT ID, NAME, DESCRIPTION FROM command WHERE NAME=#{_parameter}
	</select>
	
	<insert id="insertOne" parameterType="com.sunny.bean.Command">
		INSERT INTO command
		( ID, NAME, DESCRIPTION)
		VALUES
		( #{id},#{name},#{description})
	</insert>
	
	<delete id="deleteOne" parameterType="int">
		DELETE FROM command WHERE ID = #{_parameter}
	</delete>
	
	<update id="updateOne" parameterType="com.sunny.bean.Command">
		UPDATE command SET
			NAME=#{name}
			DESCRIPTION=#{description}
		WHERE
		ID=#{id}
	</update>
